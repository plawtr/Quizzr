<%= form_for (@question) do |form| %>
		<%= form.text_area :body, :placeholder => "Add your question" %>

		<%= form.radio_button :answer, "true"%>
		<%= form.label :answer_yes, "Yes" %>

		<%= form.radio_button :answer, "false"%>
		<%= form.label :answer_no, "No" %>

		<%= form.hidden_field :user_id, :value => session[:user_id] %>
		<%= form.submit("Add Question") %>
<% end %>

